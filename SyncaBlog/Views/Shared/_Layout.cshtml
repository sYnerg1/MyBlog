<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    @*<link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />*@
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="container">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("SyncaBlog", "Index", "Home", new { page = 1, area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Мой блог", "MyBlogDetail", "User")</li>
                        @if (User.IsInRole("admin"))
                        {
                            <li>@Html.ActionLink("Панель Администратора", "ListUsers", "Admin")</li>
                        }
                        <li>@Html.Partial("_SearchForm")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>

        <div class="row">
            
            <div id="categories" class="col-sm-2">
                @RenderSection("SearchForm", false)
            </div>

            <div class="col-sm-8">
                @RenderBody()
            </div>
            
            <div class="col-sm-2">
                @*@Html.Partial("_TagListPartial")*@
                @RenderSection("TagMenu", false)
            </div>
        </div>
    </div>



    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

</body>
</html>
